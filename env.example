# CloneGallery Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type: 'sqlite' for development, 'postgresql' for production
DB_TYPE=postgresql

# PostgreSQL Configuration (Production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=clonegallery
POSTGRES_USER=clonegallery
POSTGRES_PASSWORD=clonegallery

# SQLite Configuration (Development)
SQLITE_PATH=clonegallery.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_HOST=cache
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# AI GENERATION CONFIGURATION
# =============================================================================

# AI Provider: 'local', 'replicate', 'openai', 'stability'
AI_PROVIDER=replicate

# Replicate API (Recommended for production)
REPLICATE_API_TOKEN=your_replicate_token_here

# OpenAI API (Alternative)
OPENAI_API_KEY=your_openai_key_here

# Stability AI API (Alternative)
STABILITY_API_KEY=your_stability_key_here

# Local GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=cuda

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Storage type: 'local', 's3', 'minio'
STORAGE_TYPE=s3

# Local Storage
LOCAL_UPLOAD_PATH=uploads

# MinIO Configuration (Local S3-compatible)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=clonegallery
MINIO_SECRET_KEY=clonegallery123

# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=clonegallery-images
S3_THUMBNAIL_BUCKET=clonegallery-thumbnails

# CDN Configuration
CDN_URL=https://your-cdn-domain.com
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# API Configuration
API_URL=http://api:8000
API_HOST=0.0.0.0
API_PORT=8000

# Web Configuration
WEB_HOST=0.0.0.0
WEB_PORT=3000
NODE_ENV=production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Level
LOG_LEVEL=INFO

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# Prometheus (Metrics)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Email Templates
EMAIL_FROM=noreply@clonegallery.com
EMAIL_FROM_NAME=CloneGallery

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
MAX_FILES_PER_UPLOAD=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,avif,tiff

# Image Processing
MAX_IMAGE_WIDTH=4096
MAX_IMAGE_HEIGHT=4096
THUMBNAIL_SIZE=300
WEBP_QUALITY=85

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_AI_GENERATION=true
FEATURE_IMAGE_EDITING=true
FEATURE_USER_REGISTRATION=true
FEATURE_OAUTH_LOGIN=true
FEATURE_COMMENTS=true
FEATURE_ANALYTICS=true
FEATURE_VECTOR_SEARCH=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode
DEBUG=false
RELOAD=false

# Database seeding
SEED_DATABASE=true
SEED_SAMPLE_IMAGES=true
SEED_SAMPLE_USERS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/clonegallery.crt
SSL_KEY_PATH=/etc/ssl/private/clonegallery.key

# Security Headers
SECURITY_HEADERS=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Performance
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
